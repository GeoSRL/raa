<% return show_msg "Please #{ link_to :Login, users_login_path } to continue.", "warning" if auth_required %>

<legend>Create Movement</legend>

	<% if @movements.errors.any? %>
		<ul class="span4 pull-right">
			<% @movements.errors.full_messages.each do |e| %>
				<%= content_tag :li, e %>
			<% end -%>
		</ul>
	<% end -%>

<%= form_for @movements, :url => movements_create_url, :html => { :class => "form-horizontal pull-left" } do |f| %>

	<div class="control-group">
		<div class="control-label">Title</div>
		<div class="controls">
			<%= f.text_field :title, :value => "" %>
		</div>
	</div>

	<div class="control-group">
		<div class="control-label">Issue Info</div>
		<div class="controls">
			<%= f.text_area :body, :class => "info-box", :value => "" %>
		</div>
	</div>

	<div class="control-group">
		<div class="controls">
			<%= f.button :Create, :class => "btn", "data-loading-text" => "Loading..." %>
		</div>
	</div>

<% end -%>