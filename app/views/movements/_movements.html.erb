<% if @movements.blank? %>
   <%= content_tag :p, "You've not created any movements yet...", :class => "well-small" %>
<% end -%>

<div class="accordion" id="accordion2">
  <% @movements.each do |m| %>
    <div class="accordion-group">
      <div class="accordion-heading">
        <%= link_to "<div class=\"icon-info-sign collapse-nav\"></div>".html_safe, movements_view_path(m.id), 
            :class => "pull-right" %>
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapse_m<%= m.id %>">
          <%= m.title %>
        </a>
      </div>
      <div id="collapse_m<%= m.id %>" class="accordion-body collapse">
        <div class="accordion-inner">
          <%= m.body %>
        </div>
      </div>
    </div>
  <% end -%>
</div>
