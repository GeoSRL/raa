<% if flash[:notice] %>
	<%= show_msg flash[:notice], "info" %>
<% end -%>

<div class="well-small clearfix">
  <%= link_to "Add Comment", "#", :class => "pull-left add_comment_js btn-small btn-success" %>
</div>

<%= form_for :comment, :url => comments_create_path(params[:id]), :html => { :class => "add_comment hide well-small form-horizontal clearfix" } do |f| %>
	<%= f.text_area :body, :class => "info-box", :placeholder => "Enter your comment..." %>
	<br><br><%= f.submit :Comment, :class => "btn" %>
<% end -%>