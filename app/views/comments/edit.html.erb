<% return show_msg "Please #{ link_to :Login, users_login_path } to continue.", "warning" if auth_required %>

<%= back_to "viewing Topic", topics_view_path(params[:id]) %> 

<legend>Editing comment</legend>

<%= form_for :comments, :url => comments_update_path(params[:id]), :html => { :class => "form-horizontal" } do |f| %>
	<div class="control-group">
		<div class="control-label">Body</div>
		<div class="controls">
			<%= f.text_area :body, :class => "info-box", :value => @comments.body %>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<%= f.submit :Update, :class => "btn"%>
		</div>
	</div>
<% end -%>