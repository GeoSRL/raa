<% if @users.errors.any?	%>
  <%= content_tag :ul, :class => "well-small" do %>
    <% @users.errors.full_messages.each do |e| %>
	  <%= content_tag :li, e %>
	<% end -%>
  <% end -%>
<% end -%>

<%= form_for @users, :url => users_register_path, :html => { :class => "span6 form-horizontal well-small" } do |f|  %>
  <div class="control-group">
    <label class="control-label" for="users_email">Email</label>
    <div class="controls">
      <%= f.text_field :email, :placeholder => "Email address" %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="users_name">Name</label>
    <div class="controls">
      <%= f.text_field :name, :placeholder => "Name" %>
    </div>
  </div>
  <div class="control-group">
		<label class="control-label" for="users_password">Password</label>
		<div class="controls">
			<%= f.password_field :password, :placeholder => "Password" %>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="users_password_confirmation">Confirm Password</label>
		<div class="controls">
			<%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="users_password">Zipcode</label>
		<div class="controls">
			<%= f.text_field :zipcode, :placeholder => "Zipcode" %>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<%= f.submit :Register, :class => "btn" %>
		</div>
	</div>
<% end -%>