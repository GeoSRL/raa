<% return show_msg "Please #{ link_to :Login, users_login_path } to continue.", "warning" if auth_required %>

<%= back_to "viewing Topics", topics_path %>

<legend>Create Topic</legend>

	<% if @topics.errors.any? %>
		<%= content_tag :ul, :class => "span4 pull-right" do %>
			<% @topics.errors.full_messages.each do |e| %>
				<%= content_tag :li, e %>
			<% end -%>
		<% end -%>
	<% end -%>

<%= form_for @topics, :url => topics_create_url, :html => { :class => "form-horizontal pull-left" } do |f| %>

	<div class="control-group">
		<div class="control-label">Title</div>
		<div class="controls">
			<%= f.text_field :title, :placeholder => "Give your topic a title" %>
		</div>
	</div>

	<div class="control-group">
		<div class="control-label">Issue Info</div>
		<div class="controls">
			<%= f.text_area :body, :class => "info-box", :placeholder => "Give a general idea of what your topic is about" %>
		</div>
	</div>

	<div class="control-group">
		<div class="controls">
			<%= f.button :Create, :class => "btn", "data-loading-text" => "Loading..." %>
		</div>
	</div>

<% end -%>